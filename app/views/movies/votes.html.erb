<main class="my-background-cover">
  <div class="container mx-auto py-5">

    <div class="py-8 text-center">
      <h1 class="text-5xl text-yellow-500 font-bold mb-2">Movie Portal</h1>
      <p class="text-xl text-yellow-500 font-bold mb-8">❤️ Your entertainment planner ❤️</p>
    </div>

    <div class="my-5 mx-auto text-center">
      <button class="btn bg-transparent border border-yellow-500 hover:border-transparent hover:bg-yellow-700">
        <%= link_to "Popular", root_path %>
      </button>
      <button class="btn bg-yellow-500 hover:bg-yellow-700">
        <%= link_to "Top Reviewed", movies_voting_path %>
      </button>
      <button class="btn bg-transparent border border-yellow-500 hover:border-transparent hover:bg-yellow-700">
        <%= link_to "Ascending", movies_title_path %>
      </button>
    </div>

    <% if @movies %>
      <div class="flex flex-wrap overflow-hidden justify-center">
        <% @movies.each do |movie| %>
          <div class="overflow-hidden rounded shadow-lg w-48 bg-black m-5">
            <div class="bg-cover bg-center w-48 h-auto">
              <%= link_to (image_tag 'https://image.tmdb.org/t/p/w300/' + movie.poster_path), movie_path(movie.id) %>
            </div>
            <div class="inline-flex justify-between space-between w-48 p-2">
              <div class="text-white text-lg"><%= movie.title %></div>
              <div class="card-rating pr-4"><%= movie.average_vote %></div>
            </div>
          </div>
        <% end %>
      </div>

    <% end %>
  </div>

</main>